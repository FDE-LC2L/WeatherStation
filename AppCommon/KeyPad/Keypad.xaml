<Window
    x:Class="KeyPad.Keypad"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    Width="299"
    Height="313"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="5"
            Direction="-90"
            ShadowDepth="1" />
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="22" />
        </Style>
        <LinearGradientBrush x:Key="IPhoneSteelBackground" StartPoint="0.5,0" EndPoint="0.5,1.272">
            <GradientStop Offset="0" Color="#FF9097A3" />
            <GradientStop Offset="1" Color="#FF444D5B" />
        </LinearGradientBrush>

        <!--</Storyboard>-->
        <Style x:Key="buttonBorder" TargetType="Border">
            <Setter Property="Button.Effect" Value="{StaticResource DropShadowEffect}" />
            <Setter Property="Margin" Value="4" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </Window.Resources>



    <Grid Background="{DynamicResource IPhoneSteelBackground}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                Name="button5"
                Background="WhiteSmoke"
                BorderThickness="1"
                Click="Button_Click"
                Command="{Binding Path=PressAndRelease}"
                CommandParameter="NUMPAD7">
                7
            </Button>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button6"
                Background="WhiteSmoke"
                BorderThickness="1"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD8"
                Content="8" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button7"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD9"
                Content="9" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="3">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button8"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="BACK">
                <Path
                    Width="36"
                    Height="24"
                    Data="F1M555.0371,274.4893L552.7871,276.7383L549.9861,273.9373L547.1991,276.7243L545.1131,274.6393L547.9001,271.8523L545.0101,268.9603L547.2601,266.7113L550.1501,269.6023L552.8921,266.8613L554.9761,268.9463L552.2361,271.6883z M555.3751,264.0003L544.8751,264.0003C543.1251,264.1253,535.0001,270.7503,535.0001,272.2503C535.0001,273.7503,543.1251,279.3753,544.8751,279.5003L555.3751,279.5003C558.8751,279.5003,559.3751,277.7093,559.3751,275.5003L559.3751,268.0003C559.3751,265.7913,558.7501,264.0003,555.3751,264.0003"
                    Fill="#FF333333"
                    Stretch="Fill" />
            </Button>
        </Grid>
        <Grid Grid.Row="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button9"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD4"
                Content="4" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button10"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD5"
                Content="5" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button11"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD6"
                Content="6" />
        </Grid>
        <Grid Grid.Row="3">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button13"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD1"
                Content="1" />
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button14"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD2"
                Content="2" />
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button15"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD3"
                Content="3" />
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="3">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button16"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="RETURN"
                Content="Enter"
                IsDefault="True" />
        </Grid>
        <Grid Grid.Row="4" Grid.ColumnSpan="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button17"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="NUMPAD0"
                Content="0" />
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="button19"
                Background="WhiteSmoke"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="DECIMAL"
                Content="." />
        </Grid>
        <Grid Grid.ColumnSpan="3">
            <Border
                Background="Black"
                CornerRadius="0"
                Style="{StaticResource buttonBorder}" />
            <Label
                Margin="4"
                HorizontalContentAlignment="Right"
                Background="WhiteSmoke"
                Content="{Binding Result}" />
        </Grid>
        <Grid Grid.Column="3">
            <Border
                Background="Black"
                CornerRadius="4"
                Style="{StaticResource buttonBorder}" />
            <Button
                x:Name="buttonEsc"
                Grid.Row="0"
                Click="Button_Click"
                Command="{Binding PressAndRelease}"
                CommandParameter="ESC"
                Content="Esc"
                IsCancel="True" />
        </Grid>

    </Grid>
</Window>
