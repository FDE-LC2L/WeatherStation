<local:BaseWindow
    x:Class="WeatherStation.Windows.SelectNetworkInterfaceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appResx="clr-namespace:WeatherStation.Properties"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherStation.Infrastructure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:WeatherStation.UserControls"
    Title="SelectNetworkInterfaceWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BrushSensorZoneLinearGradient}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="30"
            FontWeight="Bold"
            Text="{x:Static appResx:Resources.SelectNetworkInterface}" />

        <ListView
            x:Name="ListViewNetworkInterfaces"
            Grid.Row="1"
            Margin="2,0,2,0"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            AlternationCount="2"
            FontSize="24"
            FontWeight="Bold"
            IsTextSearchEnabled="False"
            Loaded="ListViewNetworkInterfaces_Loaded"
            MouseDoubleClick="ListViewNetworkInterfaces_MouseDoubleClick"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="{StaticResource BrushSensorZoneLinearGradient}" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
                <Style x:Key="ColHeaderText" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="TextAlignment" Value="Center" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="230">
                        <GridViewColumn.Header>
                            <TextBlock Style="{StaticResource ColHeaderText}" Text="Name" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="28"
                                    Text="{Binding Name}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn x:Name="DescriptionColumn">
                        <GridViewColumn.Header>
                            <TextBlock Style="{StaticResource ColHeaderText}" Text="Description" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>

                            <DataTemplate>
                                <TextBlock
                                    FontSize="28"
                                    Text="{Binding Description}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Width="240">
                        <GridViewColumn.Header>
                            <TextBlock Style="{StaticResource ColHeaderText}" Text="Ip Address" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="28"
                                    Text="{Binding IPAddressV4}"
                                    TextAlignment="Left" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="220">
                        <GridViewColumn.Header>
                            <TextBlock Style="{StaticResource ColHeaderText}" Text="Speed" />
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontSize="28"
                                    Text="{Binding FormattedSpeed}"
                                    TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                </GridView>
            </ListView.View>

        </ListView>

        <StackPanel
            x:Name="StackPanelRight"
            Grid.Row="2"
            Background="{StaticResource BrushCommonLinearGradient}"
            FlowDirection="RightToLeft"
            Orientation="Horizontal">
            <uc:ImageButton
                Click="ImageButton_Click"
                ImageSrc="{StaticResource imgCancel}"
                Text="{x:Static appResx:Resources.CaptionCancel}" />
        </StackPanel>

    </Grid>
</local:BaseWindow>
