<Application
    x:Class="WeatherStation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WeatherStation"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <!--  Other merged dictionaries here  -->

                <ResourceDictionary Source="/.Styles/Colors.xaml" />
                <ResourceDictionary Source="/.Styles/Common.xaml" />
                <ResourceDictionary Source="/.Styles/Images.xaml" />
                <ResourceDictionary Source="/.Styles/ImagesWeather.xaml" />



            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <FontFamily x:Key="Lcd">pack://application:,,,/Fonts/#LCD</FontFamily>







        </ResourceDictionary>


    </Application.Resources>
</Application>
