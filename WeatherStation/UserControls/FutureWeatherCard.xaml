<local:BaseWeatherCard
    x:Class="WeatherStation.UserControls.FutureWeatherCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:infrastructure="clr-namespace:WeatherStation.Infrastructure"
    xmlns:local="clr-namespace:WeatherStation.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisFutureWeatherCard"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BrushFutureWeatherCardLinearGradient}"
    mc:Ignorable="d">

    <local:BaseWeatherCard.Resources>
        <local:ImageHeightConverter x:Key="ImageHeightConverter" />
    </local:BaseWeatherCard.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="{Binding ElementName=MainGrid, Path=Width, Converter={StaticResource ImageHeightConverter}}" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TextBlockDayName"
                Grid.Column="0"
                Margin="0,0,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                FontWeight="Bold"
                Text="{Binding ElementName=ThisFutureWeatherCard, Path=DayName}" />

            <TextBlock
                x:Name="TextBlockDate"
                Grid.Column="1"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
                FontWeight="Bold"
                Text="{Binding ElementName=ThisFutureWeatherCard, Path=FormattedDate}" />

        </Grid>

        <Image
            x:Name="SunPicto"
            Grid.Row="1"
            Source="{Binding ElementName=ThisFutureWeatherCard, Path=SunImageSrc}" />
        <Image
            x:Name="RainPicto"
            Grid.Row="1"
            Margin="-10,30,0,-10"
            Source="{Binding ElementName=ThisFutureWeatherCard, Path=RainImageSrc}" />

        <TextBlock
            x:Name="TextBlockCloudiness"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="{Binding ElementName=ThisFutureWeatherCard, Path=CloudinessText}" />

        <TextBlock
            x:Name="TextBlockTemp"
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0:0.0}° - {1:0.0}°">
                    <Binding ElementName="ThisFutureWeatherCard" Path="MinTemp" />
                    <Binding ElementName="ThisFutureWeatherCard" Path="MaxTemp" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

    </Grid>

</local:BaseWeatherCard>
