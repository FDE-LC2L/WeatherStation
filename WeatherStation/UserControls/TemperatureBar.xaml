<UserControl
    x:Class="WeatherStation.UserControls.TemperatureBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:AppCommon.Helpers;assembly=AppCommon"
    xmlns:local="clr-namespace:WeatherStation.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ParentControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:TemperatureToBrushMultiConverter x:Key="TemperatureToBrushMultiConverter" />
    </UserControl.Resources>

    <Grid>
        <ItemsControl Height="{Binding ActualHeight, ElementName=ParentControl}" ItemsSource="{Binding Values, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="1,0" VerticalAlignment="Stretch">
                        <Border.Background>
                            <MultiBinding Converter="{StaticResource TemperatureToBrushMultiConverter}">
                                <Binding Path="." />
                                <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" />
                            </MultiBinding>
                        </Border.Background>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>


</UserControl>
