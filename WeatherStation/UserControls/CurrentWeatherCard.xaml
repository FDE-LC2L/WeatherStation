<local:BaseWeatherCard
    x:Class="WeatherStation.UserControls.CurrentWeatherCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherStation.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisCurrentWeatherCard"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource BrushSensorZoneLinearGradient}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="65" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>

        <Image
            x:Name="ImagePicto"
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="0"
            Source="{Binding ElementName=ThisCurrentWeatherCard, Path=SunImageSrc}" />

        <Image
            x:Name="RainPicto"
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="0"
            Source="{Binding ElementName=ThisCurrentWeatherCard, Path=RainImageSrc}" />

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TextBlockDayName"
                Grid.Column="0"
                Margin="0,0,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{Binding ElementName=ThisCurrentWeatherCard, Path=DayName}" />

            <TextBlock
                x:Name="TextBlockDate"
                Grid.Column="1"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{Binding ElementName=ThisCurrentWeatherCard, Path=FormattedDate}" />
        </Grid>

        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Orientation="Vertical">
            <TextBlock
                x:Name="TextBlockCloudiness"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="{Binding ElementName=ThisCurrentWeatherCard, Path=CloudinessText}" />

            <TextBlock
                x:Name="TextBlockTemp"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0:0.0}° - {1:0.0}°">
                        <Binding ElementName="ThisCurrentWeatherCard" Path="MinTemp" />
                        <Binding ElementName="ThisCurrentWeatherCard" Path="MaxTemp" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>

    </Grid>
</local:BaseWeatherCard>
